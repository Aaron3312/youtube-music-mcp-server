# Required: Google OAuth credentials
GOOGLE_OAUTH_CLIENT_ID=your-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret

# Required for deployment: OAuth redirect URI
# Must match the URI configured in Google Cloud Console
# Example for Smithery: https://your-deployment.smithery.ai/oauth/callback
GOOGLE_REDIRECT_URI=http://localhost:8081/oauth/callback

# Optional: Encryption key for token storage (32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# Optional: Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
BURST_LIMIT=10

# Optional: Server configuration
PORT=8081
NODE_ENV=development

# Optional: Redis for session storage
REDIS_URL=

# Testing: Bypass authentication
BYPASS_AUTH_FOR_TESTING=false
